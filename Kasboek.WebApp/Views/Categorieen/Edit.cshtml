@model Kasboek.WebApp.Models.Categorie

@{
    ViewData["Title"] = "Categorie bewerken";
}

<h2>Categorie bewerken</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategorieId" />
            <div class="form-group">
                <label asp-for="Omschrijving" class="control-label"></label>
                <input asp-for="Omschrijving" class="form-control" />
                <span asp-validation-for="Omschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Saldo</label>
                @string.Format("{0:C}", ViewData["Saldo"])
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-default" /> |
                <a asp-action="Details" asp-route-id="@Model.CategorieId">Terug naar details</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
