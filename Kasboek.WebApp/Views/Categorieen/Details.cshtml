@using Kasboek.WebApp.Models.RekeningenViewModels
@model Categorie

@{
    ViewData["Title"] = "Categorie details";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Omschrijving)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Omschrijving)
        </dd>
        <dt>
            Saldo
        </dt>
        <dd class="@((decimal)ViewData["Saldo"] < 0M ? "currency-negative" : "")">
            @string.Format("{0:C}", ViewData["Saldo"])
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategorieId">Bewerken</a> |
    <a asp-action="Delete" asp-route-id="@Model.CategorieId">Verwijderen</a> |
    <a asp-action="Index">Terug naar categorieën</a>
</div>
<hr />

<h3>Rekeningen met standaard categorie</h3>
@await Html.PartialAsync("../Rekeningen/_Rekeningen", (IList<RekeningViewModel>)ViewBag.RekeningenMetStandaardCategorie)

<h3>Transacties</h3>
@await Html.PartialAsync("../Transacties/_Transacties", (IList<Transactie>)ViewBag.Transacties)
