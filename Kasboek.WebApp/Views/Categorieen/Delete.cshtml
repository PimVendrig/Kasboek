@model Kasboek.WebApp.Models.Categorie

@{
    ViewData["Title"] = "Categorie verwijderen";
}

<h3>Weet u zeker dat u deze categorie wilt verwijderen?</h3>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Omschrijving)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Omschrijving)
        </dd>
        <dt>
            Saldo
        </dt>
        <dd class="@((decimal)ViewData["Saldo"] < 0M ? "currency-negative" : "")">
            @string.Format("{0:C}", ViewData["Saldo"])
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategorieId" />
        <input type="submit" value="Verwijderen" class="btn btn-default" /> |
        <a asp-action="Details" asp-route-id="@Model.CategorieId">Terug naar details</a>
    </form>
</div>
