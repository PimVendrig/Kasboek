@using Kasboek.WebApp.Models.ImporterenViewModels
@model UploadViewModel

<div class="row">
    <div class="col-md-12">
        <form asp-action="@Model.Action" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Bestand" class="control-label"></label>
                <input asp-for="Bestand" type="file" class="form-control" />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.ShowResultMessage == true)
            {
                <div class="form-group">
                    <label asp-for="ResultMessage" class="control-label"></label>
                    @Html.DisplayFor(model => model.ResultMessage)
                </div>
            }
            @if (Model.ShowNewDataLinks)
            {
                <div class="form-group">
                    <label class="control-label">Nieuwe gegevens</label>
                    <p>
                        <a asp-area="" asp-controller="Transacties" asp-action="Index" asp-all-route-data="@Model.NewTransactiesLinkParameters">Nieuwe transacties</a>
                    </p>
                    <p>
                        <a asp-area="" asp-controller="Rekeningen" asp-action="Index" asp-all-route-data="@Model.NewRekeningenLinkParameters">Nieuwe rekeningen</a>
                    </p>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Importeren" class="btn btn-default" /> |
                <a asp-action="Index">Terug naar importeren overzicht</a>
            </div>
        </form>
    </div>
</div>
