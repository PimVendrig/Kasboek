@using Kasboek.WebApp.Models.VerslagViewModels
@model BalansViewModel
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th></th>
            @foreach (var datum in Model.Datums)
            {
                <th class="date">
                    @datum.ToString("d")
                </th>
            }
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                Totaal
            </th>

            @foreach (var saldo in Model.TotaalRegel)
            {
                <th class="currency">
                    @saldo.ToString("C")
                </th>
            }
        </tr>
    </tfoot>
    <tbody>
        @foreach (var rekeningRegel in Model.RekeningRegels)
        {
            <tr>
                <td>
                    <a asp-controller="Rekeningen" asp-action="Details" asp-route-id="@rekeningRegel.RekeningId">@rekeningRegel.RekeningNaam</a>
                </td>

                @foreach (var saldo in rekeningRegel.Saldos)
                {
                    <td class="currency">
                        @saldo.ToString("C")
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
