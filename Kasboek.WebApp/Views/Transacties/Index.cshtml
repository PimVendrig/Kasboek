@model IEnumerable<Kasboek.WebApp.Models.Transactie>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bedrag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VanRekening)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NaarRekening)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bedrag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VanRekening.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NaarRekening.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TransactieId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TransactieId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TransactieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
