@model Kasboek.WebApp.Models.Transactie

@{
    ViewData["Title"] = "Transactie bewerken";
}

<h2>Transactie bewerken</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactieId" />
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bedrag" class="control-label"></label>
                <input asp-for="Bedrag" class="form-control" />
                <span asp-validation-for="Bedrag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VanRekeningId" class="control-label"></label>
                <select asp-for="VanRekeningId" class="form-control" asp-items="ViewBag.VanRekeningId">
                    <option value="">- Selecteer een rekening -</option>
                </select>
                <span asp-validation-for="VanRekeningId" class="text-danger"></span>
                <span asp-validation-for="VanRekening" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NaarRekeningId" class="control-label"></label>
                <select asp-for="NaarRekeningId" class="form-control" asp-items="ViewBag.NaarRekeningId">
                    <option value="">- Selecteer een rekening -</option>
                </select>
                <span asp-validation-for="NaarRekeningId" class="text-danger"></span>
                <span asp-validation-for="NaarRekening" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Omschrijving" class="control-label"></label>
                <textarea asp-for="Omschrijving" class="form-control"></textarea>
                <span asp-validation-for="Omschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategorieId" class="control-label"></label>
                <select asp-for="CategorieId" class="form-control" asp-items="ViewBag.CategorieId">
                    <option value="">- Selecteer een categorie -</option>
                </select>
                <span asp-validation-for="CategorieId" class="text-danger"></span>
                <span asp-validation-for="Categorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar transacties</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
